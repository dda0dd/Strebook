<!--書店(book_store)のログイン画面-->
<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mx-1 my-5 text-secondary border-bottom col-4"><b>ログイン</b></h2>
      <!--form_forをform_withに変更-->
      <%= form_with model: @book_store, url: book_store_session_path do |f| %>
        <table class="field text-secondary mx-1 my-2">
          <tr>
            <td>
              <!--emailをnameに変更(書店名でログインしてもらうため)-->
              <%= f.label :name, "書店名", class:"border-bottom" %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "春書店" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :password, "パスワード", class:"border-bottom mt-2" %><br />
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "半角英数字8文字以上" %>
            </td>
          </tr>
          <% if devise_mapping.rememberable? %>
            <tr>
              <td>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </td>
            </tr>
          <% end %>
        </table>
        <div class="actions">
          <%= f.submit "ログイン", class:"ml-1 mr-3 btn btn-outline-info btn-sm" %>
          <!--book_storesからbook_storeにフォルダ名を改名したためbook_storesのsを削除-->
            <!--書店のログイン画面呼び出し記述-->
          <%= render "book_store/shared/links" %>
        </div>
        <!--ゲストログインボタン追記-->
        <div class="actions">
          <%= link_to "ゲストログイン", book_stores_guest_sign_in_path, class: "ml-1 my-2 btn btn-outline-secondary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

