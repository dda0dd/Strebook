<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="mx-3 my-3 text-secondary border border-3 rounded-top col-2 text-center" alt="...">ログイン</h4>
        <!--form_forをform_withに変更-->
        <%= form_with model: @book_store, url: book_store_session_path do |f| %>
        <%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <table class="field text-secondary mx-3 my-3">
            <tr>
              <td>
                <!--emailをnameに変更(書店名でログインしてもらうため)-->
                <%= f.label :name, "書店名" %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "春書店" %>
              </td>
            </tr>
            <tr>
              <td>
              <%= f.label :password, "パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "半角英数字8文字以上" %>
              </td>
            </tr>
            <% if devise_mapping.rememberable? %>
              <tr>
                <td>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
                </td>
              </tr>
            <% end %>
          </table>
          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-outline-primary ml-3 btn-sm" %>
            <!--book_storesからbook_storeにフォルダ名を改名したためbook_storesのsを削除-->
              <!--書店のログイン画面呼び出し記述-->
            <%= render "book_store/shared/links" %>
          </div>
          <!--ゲストログインボタン追記-->
          <div class="actions">
            <%= link_to "ゲストログイン", book_stores_guest_sign_in_path, class: "btn btn-outline-secondary ml-3 btn-sm" %>
          </div>
        <% end %>
    </div>
  </div>
</div>

