<!--会員(書店)情報編集画面-->
<%= form_with model:@book_store, url: book_store_book_store_path(@book_store), local:true do |f| %>
  <!--下記をform_withの記載あるページ全てに追記(f.object=変数名の代わりになる)-->
  <%= render 'layouts/error_messages', model: f.object %>
  <table class="table table-borderless text-secondary">
    <tr>
      <td>書店名</td>
      <td><%= f.text_field :name, class:"border border-secondary form-text text-muted form-control-sm" %></td>
    </tr>
    <tr>
      <td>年齢</td>
      <td><%= f.text_field :age, class:"border border-secondary form-text text-muted form-control-sm" %></td>
    </tr>
    <tr>
      <td>電話番号(ハイフンなし)</td>
      <td><%= f.text_field :telephone_number, class:"border border-secondary form-text text-muted form-control-sm" %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, class:"border border-secondary form-text text-muted form-control-sm" %></td>
      <td></td>
    </tr>
    <tr>
      <!--店内画像を設定してもらう-->
      <td>店内画像</td>
      <td><%= f.file_field :image, placeholder: "店内画像", accept: "image/*" %></td>
    </tr>
    <tr>
      <td><%= f.label :tag, 'タグ' %></td>
      <%# Edit用に@post.tags.pluck(:name)でタグの配列を取得 %>
      <td><%= f.text_field :tag, value: f.object.tags.pluck(:name) %><br>
        <small>スペースで区切ることで複数指定できます。</small>
      </td>   
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "編集内容を保存", class:"btn btn-outline-success" %></td>
    </tr>
  </table>
<% end %>