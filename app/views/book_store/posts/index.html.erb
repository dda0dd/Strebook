<!--書店の投稿一覧表示ページ-->
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="col-md-8 offset-md-1">
        <h2>書店投稿一覧</h2>
          <table class="table table-hover table-inverse">
            <!--<thead>-->
            <!--  <tr>-->
            <!--    <th></th>-->
            <!--    <th>Title</th>-->
            <!--    <th>Opinion</th>-->
            <!--    <th colspan="3"></th>-->
            <!--  </tr>-->
            <!--</thead>-->
            <tbody>
              <!--複数のデータを登録する記述-->
              <% @posts.each do |post| %>
                <tr>
                  <!--<td>-->
                  <!--  <%#= link_to user_path(book.user) do %>-->
                  <!--  <%#= image_tag book.user.get_profile_image(100,100) %>-->
                  <!--  <%# end %>-->
                  <!--</td>-->
                  <td>
                    <%= link_to public_book_store_path(post.book_store) do %>
                    <%= post.title %>
                    <% end %>
                  </td>
                  <td>
                    <%= post.content %>
                  </td>
                </tr>
                <tr>
                  <td id="comment_counter">
                    <!--コメント数（book_comments/_counter）部分テンプレート呼び出し記述-->
                    <%= render "book_comments/counter", book: book %>
                  </td>
                </tr>
                <!--本の投稿ユーザと現在ログインのユーザが一致していたら表示する記述（if~end）-->
                <% if @post.user == current_user %>
                  <td><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-sm btn-success" %></td>
                  <td><%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
                <% end %>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>