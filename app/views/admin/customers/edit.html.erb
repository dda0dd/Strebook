<!--会員(お客様)情報編集画面(admin/customers/:id/edit)-->
<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, local: true do |f| %>
  <% render "public/shared/error_messages", resource: @customer %>
    <!--会員(お客様)ID追記-->
    <div class="row">
      <label class="col-lg-3">お客様ID</label>
      <div class="col-lg-3">
        <%= @customer.id %>
      </div>
    </div>
    <div class="row">
      <label class="col-lg-3">ニックネーム</label>
      <div class="col-lg-3">
        <%= f.text_field :name,autoforcus: true, autocomplete: "name",  placeholder: "はるちゃん" %>
      </div>
      </div><br>
      <div class="row">
        <label class="col-lg-3">年齢</label>
        <div class="col-lg-3">
          <%= f.text_field :age,autoforcus: true, autocomplete: "age",  placeholder: "67" %>
      </div>
      </div><br>
      <div class="row">
        <label class="col-lg-3">職業</label>
        <div class="col-lg-3">
          <%= f.text_field :occupation,autoforcus: true, autocomplete: "occupation",  placeholder: "管理職" %>
      </div>
      </div><br>
      <div class="row">
        <label class="col-lg-3">住所</label>
        <div class="col-lg-3">
          <%= f.text_field :address,autoforcus: true, autocomplete: "address",  placeholder: "大阪府" %>
        </div>
      </div><br>
      <div class="form-group row">
        <%= f.label :is_active, '会員ステータス', class: 'col-sm-3 col-form-label' %>
        <div class="col-sm-9">
          <div class="custom-control custom-radio custom-control-inline">
            <%= f.radio_button :is_active, true, checked: @customer.is_active == true, class: 'custom-control-input', id: 'status-active' %>
            <%= f.label :is_active, '有効', class: 'custom-control-label', for: 'status-active' %>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <%= f.radio_button :is_active, false, checked: @customer.is_active == false, class: 'custom-control-input', id: 'status-deleted' %>
            <%= f.label :is_active, '退会', class: 'custom-control-label', for: 'status-deleted' %>
          </div>
        </div>
      </div>
      <div class="col-lg-9"><%= f.submit "変更を保存", class: "btn btn-outline-success ml-2 btn-sm" %></div>
<!--form_withのend-->
<% end %>