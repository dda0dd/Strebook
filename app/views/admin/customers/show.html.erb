<!--会員(お客様)詳細画面(admin/customers/:id)-->
<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mx-3 my-5 text-secondary border border-3 rounded-top col-4 text-center">お客様マイページ</h2>
      <table class="mx-3 my-3 table table-hover align-middle text-secondary">
        <tr>
          <th>お客様ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>ニックネーム</td>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <th>年齢</td>
          <td><%= @customer.age %></td>
        </tr>
        <tr>
          <th>職業</td>
          <td><%= @customer.occupation %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th><%= @customer.is_active ? '有効' : '無効' %></th>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "退会", unsubscribe_public_customers_path, data: { confirm: "退会してもよろしいですか？" }, class:"btn btn-outline-success ml-2 btn-sm" %>
        </tr>
      </table>
    </div>
  </div>
</div>