<!--管理者(admin)のログイン画面(URLに/admin/sign_in入力で遷移)-->
<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mx-1 my-5 text-secondary border-bottom col-4"><b>ログイン</b></h2>
      <!--form_forをform_withに変更-->
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <table class="field text-secondary mx-1 my-2">
          <tr>
            <td>
              <%= f.label :メールアドレス, class:"border-bottom" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :パスワード, class:"border-bottom mt-2" %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </td>
          </tr>
        </table>
        <div class="mx-1">
          <%= f.submit "ログイン", class:"btn btn-outline-info btn-sm" %>
          <!--adminsからadminにフォルダ名を改名したためadminsのsを削除-->
          <%= render "admin/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

  <!--下記は必要ないためコメントアウト-->
