<!--お客様の書店投稿一覧表示ページ-->
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="col-md-8 offset-md-1">
        <h2>書店投稿一覧</h2>
          <table class="mx-3 my-3 table table-hover table-inverse">
            <thead>
              <tr>
                <th>Title</th>
                <th>Content</th>
                <!--<th colspan="3"></th>-->
              </tr>
            </thead>
            <tbody>
              <!--複数のデータを登録する記述-->
              <% @posts.each do |post| %>
                <tr>
                  <!--<td>-->
                  <!--  <%#= link_to user_path(book.user) do %>-->
                  <!--  <%#= image_tag book.user.get_profile_image(100,100) %>-->
                  <!--  <%# end %>-->
                  <!--</td>-->
                  <td>
                    <%= link_to public_book_store_path(post.book_store) do %>
                      <%= post.title %>
                    <% end %>
                  </td>
                  <td>
                    <!--感想コメント作成・特定の投稿に紐づく感想コメント一覧表示ページに遷移(public/posts/show)-->
                    <%= link_to public_post_path(post) do %>
                      <%= post.content %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
  <!--タグで検索できる検索窓設置-->
      </div>
    </div>
  </div>
</div>

<%= @posts.inspect %>