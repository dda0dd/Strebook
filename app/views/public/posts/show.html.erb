<!--投稿内容のリンク先-->
  <!--感想コメント作成-->
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3 class="mt-3">感想を書く</h3>
      <%= form_with model: @thoughtse_comment, url: public_book_store_thoughtse_comments_path(@post.book_store) do |f| %>
        <%= f.hidden_field :post_id, value: @post.id %>
        
        <div class="mb-2">
          <%= f.label :content, "感想" %>
          <%= f.text_area :content, rows: '8', class: "form-control" %>
        </div>
        
        <div class="mb-2">
          <%= f.label :evaluation_score, "評価" %>
          <%= f.select :evaluation_score, (1..5), { include_blank: "評価を選ぶ" }, { class: "form-control" } %>
        </div>
        
        <%= f.submit "感想コメント", class:"btn btn-outline-primary btn-sm" %>

      <% end %>
    </div>
    
    <div class="col-md-8">
      <h3 class="mt-3">感想コメント</h3>
      <!--特定投稿に紐づく感想コメント一覧-->
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>content</th>
            <th>evaluation_score</th>
          </tr>
        </thead>
        <tbody>
          <% @thoughtse_comments.each do |thoughtse_comment|%>
            <tr>
              <td><%= thoughtse_comment.content %></td>
              <td><%= thoughtse_comment.evaluation_score %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

