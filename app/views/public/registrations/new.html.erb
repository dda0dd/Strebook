<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mx-1 my-5 text-secondary border-bottom col-3"><b>新規会員登録</b></h2>
        <!--form_forをform_withに変更-->
        <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <!--<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>-->
          <!--publicsからpublicにフォルダ名を改名したためpublicsのsを削除-->
            <!--新規登録画面でのエラーメッセージを呼び出し記述-->
          <%= render "public/shared/error_messages", resource: resource %>
          <table class="field text-secondary mx-1 my-2">
            <tr>
              <td>
                <!--emailをnameに変更(ニックネームで新規登録してもらうため)-->
                <%= f.label :name, "ニックネーム", class:"border-bottom" %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "はるちゃん", class:"text-secondary border rounded" %>
              </td>
            </tr>
            <tr>
              <td>
                <!--新規登録時に住所(都道府県のみ)記載してもらう-->
                <%= f.label :address, "住所", class:"border-bottom mt-2" %><br />
                <!--都道府県を選択してもらう形に設定(helpers/application_helper.rbに都道府県情報記載)-->
                <%= f.select :address, options_for_select(prefecture_options), { include_blank: '選択してください' }, class:"text-secondary border boder-secondary rounded" %>
              </td>
            </tr>
            <tr>
              <td>
                <!--新規登録時に年齢(数字のみ)記載してもらう-->
                <%= f.label :age, "年齢", class:"border-bottom mt-2" %><br />
                <%= f.text_field :age, autofocus: true, placefield: "67", placeholder: "67", class:"text-secondary border rounded" %>
              </td>
            </tr>
            <tr>
              <td>
                <!--新規登録時に職業記載してもらう-->
                <%= f.label :occupation, "職業", class:"border-bottom mt-2" %><br />
                <%= f.text_field :occupation, autofocus: true, placefield: "管理職", placeholder: "管理職", class:"text-secondary border rounded" %>
              </td>
            </tr>
            <tr>
              <td>
                <!--新規登録時にパスワード(英数字8文字上)記載してもらう-->
                <%= f.label :password, "パスワード", class:"border-bottom mt-2" %><br />
                <%# if @minimum_password_length %>
                <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
                <%# end %>
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字8文字以上", class:"text-secondary border rounded" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.label :password_confirmation, "確認用", class:"border-bottom mt-2" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "半角英数字8文字以上", class:"text-secondary border rounded" %>
              </td>
            </tr>
          </table>
          <!--新規登録ボタン設置-->
          <div class="actions">
            <%= f.submit "新規登録", class:"ml-1 mr-3 text-center btn btn-outline-success btn-sm" %>
            <!--publicsからpublicにフォルダ名を改名したためpublicsのsを削除-->
              <!--お客様の会員登録画面呼び出し記述-->
            <%= render "public/shared/links" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
