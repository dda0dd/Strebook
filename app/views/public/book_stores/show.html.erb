<!--書店のマイページ(詳細)表示ページ-->
<div class="container">
  <div class="row">
    <div class="col-md-3">
 <%= render 'users/main', book: @book_new, user:@user %>
    </div>

<!--削除を実行するためのリンクを追記-->
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
<!--投稿ユーザー画像-->
        <td>
          <%= link_to user_path(@book.user) do %>
          <%= image_tag @book.user.get_profile_image(100,100) %><br>
          <% end %>
          <%= link_to @book.user.name, user_path(@user) %>
        </td>
        <!--本人時、他人時両方に表示したいのでif~endの外に記述-->
<!--本のタイトル-->
        <td>
          <%= link_to @book.title, book_path(@book) %>
          <!--<p><%#= @book.title %></p>-->
        </td>
<!--本の感想-->
        <td>
          <%= @book.body %>
        </td>
<!--本人なら表示、他人なら不表示にする記述(if~end)-->
      <% if @book.user == current_user %>
<!--Editボタン-->
        <td>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
        </td>
<!--Destroyボタン-->
        <td>
          <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger destroy" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
  </div>
</div>