<!--リクエストコメント作成ページ-->
  <!--form_withヘルパーでlocal: falseを指定で非同期通信行うことができる-->
    <!--id: "comment_textarea"追加でcomment_textareaというIDがテキストエリアに割り当てられる-->
<%= form_with url: public_request_comments_path do |f| %>
  <div class="mx-3 my-3 text-secondary ">
    <!--リクエストコメント作成したお客様のニックネーム表示する-->
    <%= f.text_area :content, rows: '8', style: "width:80%", id: "request_comment_textarea" %>
    <%= f.submit "新規作成", class: "mx-2 btn btn-outline-primary btn-sm" %>
  </div>
<% end %>